<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    tools:context=".Activities.RegisterInfoActivity">
    <!--android:background="@drawable/backgroudColor"-->

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Datos Personales"
        style="@style/TitleStyle"
        />

    <TextView
        android:id="@+id/smallTitle"
        android:layout_below="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Los Datos se usaran Para el registro"
        style="@style/SmallMessage"
        />

    <EditText
        android:id="@+id/edName"
        android:layout_below="@id/smallTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        style="@style/EditTextStyle"
        />
    <EditText
        android:id="@+id/edLastName"
        android:layout_below="@id/edName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="LastName"
        style="@style/EditTextStyle"
        />
    <EditText
        android:id="@+id/edPhone"
        android:layout_below="@id/edLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone"
        style="@style/EditTextStyle"
        />
    <EditText
        android:id="@+id/edAddress"
        android:layout_below="@id/edPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Address"
        style="@style/EditTextStyle"
        />
    <!--android:layout_toRightOf="@id/chkMas"-->
    <Button
        android:id="@+id/btnPresionar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingresar Datos"
        style="@style/Btn"
        android:onClick="btnChek"/>

</RelativeLayout>